@page "/caesar"
<h3>Caesar</h3>

<div>
    <label for="normal" class="form-label">Normal Text</label>
    <input type="text" class="form-control" id="normal" placeholder="Normal Text..." @bind="normal" />
    <label for="key" class="form-label">Cipher Key</label>
    <input type="number" class="form-control" id="key" placeholder="Key..." @bind="cipherkey" />
</div>
<button type="submit" class="btn btn-primary mt-4" @onclick="Cezar">
    <span class="oi oi oi-shield me-2" aria-hiden="true"></span>Encrypt
</button>


@if (caesar != string.Empty)
{
    <div class="mt-4">
        <span>@caesar</span>
    </div>
}

@code {

    string caesar = string.Empty;
    string normal = string.Empty;
    public int cipherkey { get; set; }

    private void Cezar()
    {
        System.Text.StringBuilder sb = new System.Text.StringBuilder(normal);
        for (int i = 0; i < sb.Length; i++)
        {
            if (!System.Char.IsWhiteSpace(sb[i]))
            {
                if (System.Char.IsUpper(sb[i]))
                {
                    sb[i] = (char)(((sb[i] + cipherkey) - 'A') % 26 + 'A');
                }
                else
                {
                    sb[i] = (char)(((sb[i] + cipherkey) - 'a') % 26 + 'a');
                }
            }
        }
        caesar = sb.ToString();
    }
    //JAVATPOINT OK
    //HELLO OK
}